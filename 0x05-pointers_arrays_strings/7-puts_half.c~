#include "main.h"
/**
*puts_half - prints every character of a string
*@str: string parameter input
*Return : Noting
*/
void puts_half(char* str) {
int length = _strlen(str);
int start_index;

if (length % 2 == 0) {
start_index = length / 2;
}
else {
start_index = (length - 1) / 2;
}

for (int i = start_index; i < length; i++) {
_putchar(str[i]);
}

_putchar('\n');
}
