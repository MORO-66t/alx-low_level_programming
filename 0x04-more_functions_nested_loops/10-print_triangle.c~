#include "main.h"

/**
 * print_triangle - prints a triangle
 * @size: size of the triangle
 *
 * Return: Always 0 (Success)
 */
void print_triangle(int size)
{

int hght, base;

if (size <= 0)
{
_putchar('\n');
		
}

for (hght = 1; hght <= size; hght++)
{
for (base = 1; base <= hght; base++)
{
if (base <= size - hght)
{
_putchar(' ');
}
else
{			  {
_putchar('#');
}
}
_putchar('\n');
}
}
}
